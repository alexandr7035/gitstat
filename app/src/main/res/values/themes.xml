<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitStat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_400</item>
        <item name="colorPrimaryVariant">@color/gray_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/primaryBackground</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground">
        <item name="android:background">@drawable/background_bottom_dialog</item>
    </style>

    <style name="FragmentTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarStyle">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="navigationIcon">?attr/actionModeCloseDrawable</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="PrimaryCardStyle">
        <item name="android:elevation">@dimen/default_element_elevation</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/background_card</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/background_primary_button</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ProfileFieldIconsStyle">
        <item name="android:tint">@color/gray_300</item>
        <item name="android:layout_width">20sp</item>
        <item name="android:layout_height">20sp</item>
    </style>

    <style name="ProfileTextFieldsCardTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="ShowMoreButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_gray_underlined_button</item>
    </style>

    <style name="NameTextViewStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="UserIDTextViewStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_200</item>
    </style>

    <style name="HeaderLabelStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <style name="HeaderNumberStyle">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardHeaderStyle">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppVersionStyle">
        <item name="android:textColor">@color/gray_400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DrawerItemTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <style name="DrawerSyncDateStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <style name="MonthCardTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="MonthCardContributionsCount">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <style name="MonthCardGridBackground">
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/background_card</item>
    </style>

    <style name="YearSelectorTabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabBackground">@drawable/background_tab</item>
        <item name="android:background">@drawable/background_tablayout</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/YearSelectorTabTextAppearance</item>
        <item name="tabPaddingEnd">20dp</item>
        <item name="tabPaddingStart">20dp</item>
    </style>

    <style name="YearSelectorTabTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LinkStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="RepositoryViewStyle">
        <item name="android:background">@drawable/background_repository_item</item>
        <item name="android:elevation">@dimen/default_element_elevation</item>
    </style>

    <style name="RepositoryTopicTagStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_100</item>
        <item name="android:background">@drawable/background_repository_topic</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="RepositoryBarCardStyle">
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/fg_card_darkened</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/background_card</item>
        <item name="android:elevation">@dimen/cardview_default_elevation</item>
    </style>
    
    <style name="RadioButtonStyle">
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:textColor">@color/color_radio_button</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/background_radio_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="SwitchMenuItem">
        <item name="switchPadding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="HighlightCard">
        <item name="android:elevation">@dimen/default_element_elevation</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_highlight_card</item>
    </style>
</resources>