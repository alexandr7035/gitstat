<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/label"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:text="Just a minute..."
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/labelDesc"
        android:textSize="18sp"
        android:textColor="?attr/colorPrimary"
        android:text="We are preparing your data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--    <ProgressBar-->
<!--        android:layout_margin="16dp"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"/>-->
    <ImageView
        android:id="@+id/loaderPic"
        android:layout_margin="16dp"
        android:src="@drawable/ic_logo_no_bg"
        android:layout_width="72dp"
        android:layout_height="72dp"/>

    <TextView
        android:id="@+id/syncStageDesc"
        android:textSize="18sp"
        android:textColor="?attr/colorPrimary"
        tools:text="1 / 2 Syncing repositories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>